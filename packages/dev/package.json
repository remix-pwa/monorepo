{
  "name": "@remix-pwa/dev",
  "version": "0.0.1",
  "description": "An ESbuild compiler for Service Worker on Remix.run",
  "repository": {
    "type": "git",
    "url": "git@github.com:remix-pwa/monorepo",
    "directory": "packages/dev"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "cross-env NODE_ENV=development ts-node compiler/compiler.ts --watch",
    "format": "prettier --write \"cli/**/*.ts\" \"compiler/**/*.ts\"",
    "lint": "TIMING=1 eslint --fix cli/ compiler/",
    "test": "cross-env jest --preset ts-jest/presets/default-esm --env=node --colors"
  },
  "dependencies": {
    "@remix-pwa/worker-runtime": "^0.0.1",
    "@remix-run/dev": "^1.19.2",
    "arg": "^5.0.2",
    "colorette": "^2.0.20",
    "esbuild": "^0.18.19",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.10",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@remix-pwa/eslint-config": "^0.0.0",
    "@remix-pwa/lint-staged-config": "^0.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/minimist": "^1.2.2",
    "cross-env": "^7.0.3",
    "typescript": "^5.1.6"
  }
}
