{
  "name": "@remix-pwa/dev",
  "version": "1.1.4",
  "description": "An esbuild compiler for Service Workers in Remix.run",
  "repository": {
    "type": "git",
    "url": "git@github.com:remix-pwa/monorepo",
    "directory": "packages/dev"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && tsc && npm run copy",
    "compile": "tsc && node ./build.cjs",
    "copy": "cp -r cli/templates dist/cli/templates",
    "format": "prettier --write \"cli/**/*.ts\" \"compiler/**/*.ts\"",
    "lint": "TIMING=1 eslint --fix cli/ compiler/",
    "prepublish": "npm run build",
    "test": "vitest --run --environment node --threads --single-thread --pass-with-no-tests"
  },
  "files": [
    "dist/",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@remix-pwa/worker-runtime": "^1.1.1",
    "@remix-run/dev": "^1.19.2",
    "arg": "^5.0.2",
    "colorette": "^2.0.20",
    "enquirer": "^2.4.1",
    "esbuild": "^0.18.19",
    "fs-extra": "^11.1.1",
    "ora": "^7.0.1",
    "stdin-discarder": "^0.1.0"
  },
  "devDependencies": {
    "@remix-pwa/eslint-config": "^0.0.0",
    "@remix-pwa/lint-staged-config": "^0.0.0",
    "@types/fs-extra": "^11.0.1",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.1"
  }
}
