{
  "include": ["**/*.ts", "package.json"],
  "exclude": ["dist", "**/__tests__", "node_modules", "cli/templates"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2020", "ESNext", "WebWorker"],
    "target": "es2022",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "allowJs": true,
    "rootDir": ".",
    "outDir": "dist/"
  }
}
