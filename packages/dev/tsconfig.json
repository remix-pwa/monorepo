{
  "include": ["**/*.ts", "package.json", "cli/templates/app/manifest[.]webmanifest.js"],
  "exclude": ["dist", "**/__tests__", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2020", "ESNext", "WebWorker"],
    "target": "es2022",
    "module": "NodeNext",
    // "composite": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "rootDir": ".",
    "outDir": "dist/",
    "paths": {
      "~/*": ["compiler/*"]
    }
  }
}
