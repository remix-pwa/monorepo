{
  "include": ["./src/**/*.ts", "package.json"],
  "exclude": ["dist", "./**/__tests__", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2020", "WebWorker", "WebWorker.Iterable"],
    "composite": true,
    "target": "es2020",
    "module": "nodenext",
    "allowSyntheticDefaultImports": true,
    "allowArbitraryExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "rootDir": ".",
    "outDir": "dist/",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
